{
  "name": "@bryancm/nestjs-encryption",
  "version": "1.0.0",
  "description": "This is a library that can be used in your projects to implement actions with Encryption and Matching Encrypted values",
  "main": "index.js",
  "scripts": {
    "tsc:init": "tsc --init",
    "copy:files": "cp ./LICENSE ./dist/ && cp ./README.md ./dist/ && cp ./package.json ./dist/",
    "build": "rm -rf dist && tsc && npm run copy:files",
    "publish": "cd dist/ && yarn publish --access public"
  },
  "keywords": [
    "nest",
    "nestjs",
    "package",
    "development",
    "encryption"
  ],
