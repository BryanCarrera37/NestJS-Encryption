  },
  "bugs": {
    "url": "https://github.com/BryanCarrera37/NestJS-Encryption/issues"
  },
  "author": {
    "name": "Bryan Carrera",
    "email": "bc00932@gmail.com",
    "url": "https://github.com/BryanCarrera37"
  },
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "typescript": "^5.4.5"
  }
